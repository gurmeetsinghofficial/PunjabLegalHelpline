script.
  function languageChanged(selectedValue) {
    //- console.log(`lan - ${val}`);
    var xhr = new XMLHttpRequest();
    xhr.open('POST', '/set-language', true);
    xhr.setRequestHeader('Content-Type', 'application/json');
    xhr.onreadystatechange = function() {
      if (xhr.readyState === 4 && xhr.status === 200) {
        location.reload();
      }
    };
    xhr.send(JSON.stringify({language: selectedValue}));
  }

