extends layout.pug
block content
  style.
    .abc {
      font-size: 35px;
    }
  section.text-gray-900.title-font.font-medium.mainPaddingFromTop
    .container.px-5.mx-auto
      .flex.flex-wrap.-m-4
        h1.header-large.header-bordered States we are available in

  section.text-gray-600.body-font
    .container.px-5.py-24.mx-auto
      .flex.flex-wrap.-m-4
        each state in states
          .p-4.w-full(class='lg:w-1/4 md:w-1/2')
            a.block.h-48.rounded.overflow-hidden(href=`/city/${state.state}`)
              img.object-cover.object-center.w-full.h-full.block(alt='ecommerce' src=`images/${state.state}.jpg`)
            .mt-4
              h2.text-gray-900.title-font.text-lg.font-medium.header-shadow #{state.state}